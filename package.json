{
  "name": "securehealthchain",
  "version": "1.0.0",
  "description": "Decentralized Healthcare Payment Platform on DIDLab Blockchain",
  "main": "backend/server.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "check-balance": "npx hardhat run scripts/check-balance.js --network didlab",
    "deploy:didlab": "npx hardhat run scripts/deploy-didlab.js --network didlab",
    "deploy:local": "npx hardhat run scripts/deploy-didlab.js --network localhost",
