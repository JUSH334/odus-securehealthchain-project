    "test": "npx hardhat test",
    "server": "node backend/server.js",
    "dev": "nodemon backend/server.js"
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "didlab",
    "ethereum",
    "smart-contracts"
  ],
  "author": "Team Odus",
  "license": "MIT",
